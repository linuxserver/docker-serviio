#!/usr/bin/with-contenv bash

# make folders
mkdir -p \
	/config{/config,/library,/plugins}

# copy config
[[ ! -f /config/config/application-profiles.xml || ! -f /config/config/log4j.xml || ! -f /config/config/profiles.xml ]] && \
	cp /app/serviio/config/* /config/config/

# permissions
chown -R abc:abc \
	/app \
	/config
chown abc:abc \
	/transcode
